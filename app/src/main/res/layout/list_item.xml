<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="category"
            type="com.example.androidperformanceoptimization.model.CategoriesDetailpojo"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_category_list_item"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="@{category.id}"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="@{category.name}"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_name" />

    <Button
        android:id="@+id/button_add_county_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_detail"
        />

    <TextView
        android:id="@+id/text_view_count"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@{String.valueOf(category.count)}"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/button_add_county_list"
        app:layout_constraintTop_toBottomOf="@id/textview_detail"/>

    <Button
        android:id="@+id/button_minus_country_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus"
        tools:layout_editor_absoluteX="145dp"
        app:layout_constraintStart_toEndOf="@+id/text_view_count"
        app:layout_constraintTop_toBottomOf="@id/textview_detail"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E91E63"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/button_minus_country_list"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>